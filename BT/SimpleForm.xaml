<Window x:Class="BT.SimpleForm"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="BT-Assembly Blueprint" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="83*" />
            <ColumnDefinition Width="0*" />
            <ColumnDefinition Width="33*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="253*" />
            <RowDefinition Height="31*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListBox for displaying the information -->
        <ListBox Name="mBox" Margin="17,10,16,10" Grid.ColumnSpan="2" Grid.Row="1" MinHeight="150" />

        <!-- Another ListBox in columns 2 and 3 -->
        <ListBox Name="Box" Margin="10,10,10,10" Grid.Column="3" Grid.Row="1" MinHeight="150" />

        <!-- OK Button, aligned to the right of column 2 -->
        <Button Name="Ok" Content="OK" Width="48" Height="21" VerticalAlignment="Center" HorizontalAlignment="Left" 
                Grid.Column="3" Grid.Row="2" Margin="12,0,0,0"/>

        <!-- CANCEL Button, aligned to the right of column 2 and spanning 2 columns -->
        <Button Name="Cancel" Content="CANCEL" Width="50" Height="21" VerticalAlignment="Center" HorizontalAlignment="Left" 
                Grid.Column="3" Grid.Row="2" Margin="71,0,0,0" Click="Cancel_Click"/>
    </Grid>
</Window>
