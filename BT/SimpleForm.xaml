<Window x:Class="BT.SimpleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BT-Assembly Blueprint" Height="350" Width="500" ResizeMode="CanResize">
    <Grid>
        <!-- Column Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" MaxWidth="30"/>
            <ColumnDefinition Width="*"  />
            <ColumnDefinition Width="*" MaxWidth="10" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="infoTextBlock1" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Grid.Column="1" Grid.Row="1" MinHeight="30"/>
        <ListBox Name="mBox" MaxHeight="35" Grid.Row="2" Grid.Column="1"
         VerticalAlignment="Center" BorderBrush="Transparent" BorderThickness="0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <ScrollViewer VerticalScrollBarVisibility="Auto"  Grid.Row="3" Grid.Column="1">
            <ListBox Name="infoTextBlock3"
                   Grid.Row="3" Grid.Column="1" MinHeight="10" MaxHeight="200" MinWidth="200"/>
        </ScrollViewer>

        <Button Name="Up" Content="↑" VerticalAlignment="Top" HorizontalAlignment="Center"
                Width="20" Height="20" Grid.Column="2" Grid.Row="3" />
        <Button Name="Down" Content="↓" VerticalAlignment="Top" HorizontalAlignment="Center"
        Width="20" Height="20" Grid.Column="2" Grid.Row="3"  Margin="0,50,0,0"/>
        <Button Name="Minus" Content="-" VerticalAlignment="Top" HorizontalAlignment="Center"
     Width="20" Height="20" Grid.Column="2" Grid.Row="3"  Margin="0,100,0,0"/>
        <Button Name="Plus" Content="+" VerticalAlignment="Top" HorizontalAlignment="Center"
  Width="20" Height="20" Grid.Column="2" Grid.Row="3"  Margin="0,150,0,0"/>


        <Button Name="Ok" Content="OK" VerticalAlignment="Center" HorizontalAlignment="Left"
                Width="80" Height="30" Grid.Column="3" Grid.Row="5" Click="Ok_Click"/>
        <Button Name="Cancel" Content="CANCEL" VerticalAlignment="Center" HorizontalAlignment="Right"
                Width="80" Height="30" Grid.Column="3" Grid.Row="4" Click="Cancel_Click"/>
    </Grid>
</Window>
